<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>

    <ul class="articles-ul">

        <% data.forEach(element => { %>
        <li>
            <a href="/post/<%= element._id %>">
                <span><%= element.title %></span>
                <span class="articles-list__date"> <%= element.createdAt.toDateString() %> </span>
            </a>
        </li>
        <% }) %>
    </ul>

    <% if(nextPage != null) { %>
        <a href="./?page=<%=nextPage%>" class="pagination"> &lt; view older post </a>
    <% } %>
</section>

